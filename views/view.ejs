<link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
<div class="section group example">
				<div class="col span_1_of_2">
					<h1><%= title %></h1>
				</div>
				<div class="col span_1_of_2">
					<a href="/index" class="siteButton" title="return">Recipe List</a>
				</div>
			</div>

 

  <p>
    <span>
      <div class="section group example">
		<div class="col span_1_of_3">
			<%= recipe.fn %>
			<br />
		</div>
		<div class="col span_2_of_3">
			<% recipe.ingredients.forEach( function ( ingredient ){ %>
				<%= ingredient.value %> <%= ingredient.unit %> <%= ingredient.ingredient %><br />
			<% }); %>
		</div>
		<div class="col span_3_of_3">
		<% if (typeof(recipe.instructions) != "undefined") {%>
			<%= recipe.instructions  %><br/>
		<% } %>
		<% if (typeof(recipe.yield) != "undefined") {%>
			<%= recipe.yield %><br/>
		<% } %>
		<% if (typeof(recipe.duration) != "undefined") {%>
			<%= recipe.duration %><br/>
		<% } %>
		<!--upload image here>add photo</upload><add image location></add image location-->
		<!--upload video here>add photo</upload><add video location></add video location-->
		<% if (typeof(recipe.summary) != "undefined") {%>
			<%= recipe.summary %><br/>
		<% } %>
		<% if (typeof(recipe.published) != "undefined") {%>
			<%= recipe.published %><br/>
		<% } %>
		<% if (typeof(recipe.tag) != "undefined") {%>
			<%= recipe.tag %><br/>
		<% } %>
		<% if (typeof(recipe.rating) != "undefined") {%>
			<%= recipe.rating %><br/>
		<% } %>
		</div>
     </div>   
      
    </span> 
  </p>
